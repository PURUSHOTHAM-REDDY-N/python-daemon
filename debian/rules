#!/usr/bin/make -f
export DH_VERBOSE = 1

export PYBUILD_NAME=mydaemon

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	mkdir -p debian/mydaemon/usr/local/bin
	cp mydaemon/main.py debian/mydaemon/usr/local/bin/mydaemon.py
	chmod +x debian/mydaemon/usr/local/bin/mydaemon.py

override_dh_installsystemd:
	dh_installsystemd --no-start -r --no-restart-after-upgrade --name=mydaemon
